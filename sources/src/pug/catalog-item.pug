                                input.book__phone(type="text" placeholder="Телефон*" name="phone" minlength="9" required)

                            input.book__submit.btn__link.btn__yellow(type="submit" value="Отправить" name="submit")


    section.video 
        .container
            .video__block(data-video="https://youtu.be/4xUZemOV4yc")
                img(src="" alt="видео-превью")
                button.video-play.btn-reset
